function _init()
    cls()
    x0 = 10
    y0 = 10
    x1 = 100
    y1 = 10
end

function _update()
    y0 += 3
    y1 -= 2
    if (y0 > 120) then
        y0 = 10
    end
    if (y1 < 10) then
        y1 = 120
    end
end

function _draw()
    cls(black)
    line(x0,y0,x1,y1,white)
end

